---
import { AboutContent } from '../../../modules/about/components/AboutContent';
import BaseLayout from '../../../modules/core/layouts/BaseLayout.astro';

export function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'zh' } }];
}

const { lang } = Astro.params;
---

<BaseLayout title="About" lang={lang}>
  <div class="container mx-auto px-4 py-12">
    <div className="mb-10 text-center space-y-2">
      <h1 className="text-4xl md:text-5xl font-bold tracking-tight">About Me</h1>
      <p className="text-xl text-muted-foreground">Designer, developer, and creator.</p>
    </div>
    
    <AboutContent client:load />
  </div>
</BaseLayout>

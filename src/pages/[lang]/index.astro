---
import BaseLayout from '../../modules/core/layouts/BaseLayout.astro';
import { Hero } from '../../modules/core/components/Hero';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}

const { lang } = Astro.params;
---

<BaseLayout title="Home" lang={lang}>
  <Hero client:load lang={lang} />
  
  <div class="max-w-4xl mx-auto mt-20 px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
    <a href={`/${lang}/garden`} class="group block p-6 bg-card rounded-lg border shadow-sm hover:shadow-md transition-all hover:-translate-y-1">
      <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">Digital Garden</h3>
      <p class="text-muted-foreground">Explorations, notes, and evolving thoughts.</p>
    </a>
    
    <a href={`/${lang}/work`} class="group block p-6 bg-card rounded-lg border shadow-sm hover:shadow-md transition-all hover:-translate-y-1">
      <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">Work</h3>
      <p class="text-muted-foreground">Selected projects and case studies.</p>
    </a>
    
    <a href={`/${lang}/about`} class="group block p-6 bg-card rounded-lg border shadow-sm hover:shadow-md transition-all hover:-translate-y-1">
      <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">About</h3>
      <p class="text-muted-foreground">Background, philosophy, and contact.</p>
    </a>
  </div>
</BaseLayout>

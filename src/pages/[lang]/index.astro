---
import BaseLayout from '../../modules/core/layouts/BaseLayout.astro';
import { Hero } from '../../modules/core/components/Hero';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}

const { lang } = Astro.params;
---

<BaseLayout title="Home" lang={lang}>
  <Hero client:load lang={lang} />
  
  <div class="prose dark:prose-invert mx-auto mt-20 px-4">
    <h2 class="text-center text-3xl font-bold mb-8">Latest Posts</h2>
    <div class="flex justify-center mb-10">
      <a href={`/${lang}/blog`} class="text-primary hover:underline">View all posts &rarr;</a>
    </div>
  </div>
</BaseLayout>

---
import { getCollection } from 'astro:content';
import BaseLayout from '../../modules/core/layouts/BaseLayout.astro';
import { Hero } from '../../modules/core/components/Hero';
import { ProjectCard } from '../../modules/portfolio/components/ProjectCard';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}

const { lang } = Astro.params;

// Fetch latest garden posts (using garden collection)
const allPosts = await getCollection('garden', ({ data }) => {
  return data.lang === lang;
});
const latestPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);

// Fetch featured projects
const allProjects = await getCollection('portfolio', ({ data }) => {
  return data.lang === lang && data.featured === true;
});
const featuredProjects = allProjects.sort((a, b) => a.data.sortOrder - b.data.sortOrder);
---

<BaseLayout title="Home" lang={lang}>
  <Hero client:load lang={lang} />
  
  <div class="container mx-auto px-4 py-20 space-y-32">
    
    {/* Featured Projects */}
    {featuredProjects.length > 0 && (
      <section>
        <div class="flex justify-between items-end mb-12">
          <h2 class="text-3xl font-bold tracking-tight">Featured Work</h2>
          <a href={`/${lang}/work`} class="text-primary hover:underline underline-offset-4 font-medium">View all</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredProjects.map(project => (
            <ProjectCard project={project} key={project.slug} />
          ))}
        </div>
      </section>
    )}

    {/* Latest Garden */}
    {latestPosts.length > 0 && (
      <section>
        <div class="flex justify-between items-end mb-12">
          <h2 class="text-3xl font-bold tracking-tight">Latest from Garden</h2>
          <a href={`/${lang}/garden`} class="text-primary hover:underline underline-offset-4 font-medium">Read all</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {latestPosts.map(post => (
             <a href={`/${lang}/garden/${post.slug}`} class="group block space-y-4">
               <div class="aspect-[16/9] bg-muted/50 rounded-xl overflow-hidden border border-border">
                 {post.data.heroImage ? (
                   <img src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                 ) : (
                    <div class="w-full h-full flex items-center justify-center text-muted-foreground/20">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    </div>
                 )}
               </div>
               <div>
                 <div class="flex items-center gap-2 mb-2">
                    <time datetime={post.data.pubDate.toISOString()} class="text-xs text-muted-foreground font-mono">
                        {post.data.pubDate.toLocaleDateString(lang === 'en' ? 'en-US' : 'zh-CN')}
                    </time>
                 </div>
                 <h3 class="text-xl font-bold group-hover:text-primary transition-colors leading-tight">{post.data.title}</h3>
                 <p class="text-sm text-muted-foreground mt-2 line-clamp-2">{post.data.description}</p>
               </div>
             </a>
          ))}
        </div>
      </section>
    )}

  </div>
</BaseLayout>
